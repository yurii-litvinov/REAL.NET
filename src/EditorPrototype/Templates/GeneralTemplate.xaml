    <ControlTemplate x:Key="OperationVertex" TargetType="{x:Type controls:VertexControl}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Name="PART_vcproot" Grid.Column="0">
                <Border Margin="0,2,0,0" Padding="0">
                    <controls:StaticVertexConnectionPoint Id="1"/>
                </Border>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Image Source="{Binding Picture}" Margin="0" Width="80" Stretch="UniformToFill"/>
                <controls:VertexLabelControl x:Name="PART_vertexLabel" Content="{Binding Name}" LabelPositionSide="Bottom" FontFamily="Lucida Sans Regular" />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <Border Margin="0,30,0,0" Padding="0">
                    <controls:StaticVertexConnectionPoint Id="2" />
                </Border>
            </StackPanel>
        </Grid>
    </ControlTemplate>

