<UserControl
    x:Class="ConstraintsPlugin.ConstraintsColumn"
    xmlns:scene="clr-namespace:WpfControlsLib.Controls.Scene;assembly=WpfControlsLib"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "150" />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <scene:Scene Grid.Row="0" Grid.Column="0" x:Name="scene"/>

        <Grid Grid.Row="1" Grid.Column="0">
            <Button 
                Grid.Column="0"
                Content="Constraints Check"
                IsEnabled="{Binding Path=EnableNewButton}"
                Click="CheckConstraintsClick" Margin="5,3,5,2"/>
            <Grid/>

            <Grid Grid.Column="0" Margin="0,30,0,-30">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button 
                Grid.Column="0"
                Margin ="2"
                Content="Save"
                IsEnabled="{Binding Path=EnableSaveButton}"
                Click="SaveConstraintClick"/>

                <Button 
                Grid.Column="1" 
                Margin ="2" 
                Content="New"
                IsEnabled="{Binding Path=EnableNewButton}"
                Click="NewConstraintClick"/>

                <Button 
                Grid.Column="2"
                Margin ="2"
                Content="Close"
                IsEnabled="{Binding Path=EnableCloseButton, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Click="CloseConstraintClick"/>
            </Grid>

            <Grid
            Grid.Column="0" Margin="0,60,0,-60">
                <StackPanel x:Name="stackPanel">
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
