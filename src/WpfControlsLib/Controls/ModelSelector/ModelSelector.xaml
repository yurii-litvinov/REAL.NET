<UserControl x:Class="WpfControlsLib.Controls.ModelSelector.ModelSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:modelSelector="clr-namespace:WpfControlsLib.Controls.ModelSelector"
             mc:Ignorable="d" 
             d:DataContext="{modelSelector:ModelSelector}">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ComboBox x:Name="modelsComboBox" ItemsSource="{Binding ModelNames}" Width="200" HorizontalAlignment="Left" Visibility="{Binding Path=SelectorVisibility, Converter={StaticResource booleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
