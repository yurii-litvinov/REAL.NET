<UserControl
    x:Class="WpfControlsLib.Controls.Toolbar.ToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolbar="clr-namespace:WpfControlsLib.Controls.Toolbar"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    d:DataContext="{toolbar:ToolbarViewModel}">

    <Grid>
        <ToolBarTray>
            <ToolBar x:Name="MainToolbar" Band="0">
                <Button>File</Button>
                <Separator/>
                <Button>Edit</Button>
                <Separator/>
                <Button>View</Button>
            </ToolBar>
            <ToolBar x:Name="PicToolbar" Band="1" ItemsSource="{Binding ButtonsToShow}">
                <ToolBar.ItemTemplate>
                    <DataTemplate>
                        <Button Width="16" Height="16" Margin="3" ToolTip="{Binding Description}" Command="{Binding WrappedCommand}">
                            <Button.Background>
                                <ImageBrush ImageSource="{Binding Image}"/>
                            </Button.Background>
                        </Button>
                    </DataTemplate>
                </ToolBar.ItemTemplate>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
