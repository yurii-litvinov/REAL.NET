<UserControl x:Class="WpfControlsLib.Controls.Console.AppConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:console="clr-namespace:WpfControlsLib.Controls.Console"
             mc:Ignorable="d" 
             d:DataContext="{console:AppConsoleViewModel}">
    <Grid>
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="{Binding MessagesName}">
                <ListBox ItemsSource="{Binding Messages}"/>
            </TabItem>
            <TabItem Header="{Binding ErrorsName}">
                <ListBox ItemsSource="{Binding Errors}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
