<UserControl x:Class="WpfControlsLib.Controls.Scene.Scene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:graphx="http://schemas.panthernet.ru/graphx/"
             xmlns:scene="clr-namespace:WpfControlsLib.Controls.Scene"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Templates/GeneralTemplate.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <Border BorderThickness="1"  Margin="2">
            <graphx:ZoomControl x:Name="zoomControl" AllowDrop="True">
                <scene:GraphArea AllowDrop="True" x:Name="graphArea" />
            </graphx:ZoomControl>
        </Border>
    </Grid>
</UserControl>
